{{page-title "Projects | Portfolio Manager"}}
<div class="entity">
  <h1>{{@model.title}}</h1>
  <div class="actionsBar">
    <div class="filtering"></div>
    <div class="actionButtons">
      {{#if this.isCreateProjectDisabled}}
        <button
          id="cancel"
          class="baseButton"
          type="button"
          {{on "click" (fn this.setShowCreateCompany false)}}
        >{{@model.actionBarLabels.CANCEL}}</button>
      {{/if}}
      <button
        id="new"
        class="baseButton"
        type="button"
        disabled={{this.isCreateProjectDisabled}}
        {{on "click" (fn this.setShowCreateCompany true)}}
      >{{@model.actionBarLabels.NEW}}</button>
    </div>
  </div>

  {{#if this.showCreateProject}}
    <div class="create">
      <label for="projectNameInput">
        <span class="inputLabel"> {{@model.projectNameInputLabel}}</span>
        <Input id="projectNameInput" @value={{this.name}} type="text" />
      </label>
      <label for="projectDescriptionInput">
        <span class="inputLabel">{{@model.descriptionInputLabel}}</span>
        <Textarea
          rows="4"
          cols="50"
          id="projectDescriptionInput"
          @value={{this.description}}
          type="text"
        />
      </label>
      <button
        id="new"
        class="baseButton"
        type="button"
        {{on "click" (fn this.createProject)}}
      >{{@model.actionBarLabels.CREATE}}</button>
    </div>
  {{/if}}

  {{#if @model.projectsList}}
    <Projects @projects={{@model.projectsList}} />
  {{/if}}
</div>